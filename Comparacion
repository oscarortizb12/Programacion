#include "stdafx.h"
#include <conio.h>
#include "iostream"
using namespace std;


void main()
{
	float a,b,c;
     cout<<"Ingrese el numero a: ";
	 cin>>a;
	 cout<<"Ingrese el numero b: ";
	 cin>>b;
	 cout<<"Ingrese el numero c: ";
	 cin>>c;
	if(a>b)
		if(a>c)
		cout<<"El mayor es: a"<<endl;
	   	else
        cout<<"El mayor es: c"<<endl;
	else
		if (a==b)
			cout<<"Son iguales"<<endl;
		else
		  if(b>c)
			cout<<"El mayor es: b"<<endl;
		  else
			cout<<"El mayor es: c"<<endl;
	getch();
}
