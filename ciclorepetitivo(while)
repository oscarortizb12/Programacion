void main()
{
	float b,h,a,p;
	cout<<"ingrese la base: "<<endl;
	cin>> b;
	while(b!=0)
	{ 
	    cout<< "ingrese la la altura: "<<endl;
	    cin>>h;
	    p=(b*h)/2;
	    cout<< "el area es: " <<p<<endl;
	    cout<<"ingrese la base: "<<endl;
	    cin>> b;
	}
getch();
}
